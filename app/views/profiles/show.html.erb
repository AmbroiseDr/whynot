<div class="container">
  <div class="d-flex flex-column">
    <div class="show-image justify-content-center">
      <%if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, id:"profile-picture", crop: :thumb %>
        <% else %>
        <i class="fas fa-user-edit"></i>
      <% end %>
    </div>
    <div class = "card-description-profile pb-4">
      <div class="description-header mt-5 pt-2">
        <h5> <%= current_user.name.capitalize %></h5>
        <%if current_user.age.nil? %>
          <% else %>
          <h6><%= current_user.age %> ANS</h6>
        <%end %>
      </div>

      <div class="mbti-display mt-1">
        <p class="mbti-as-btn"><%= current_user.mbti %></p>
      </div>
      <div class="user-description mt-1">
        <p><%=current_user.profile_mbti.description%></p>
        <hr class="ml-3 mr-3 mt-1 mb-1">
      </div>
      <div class="user-preferences">
        <div class="pref pr-3 pl-4 pt-2 d-flex align-items-center">
          <% if current_user.job.nil? %>
            <% else %>
            <i class="fas fa-suitcase"></i>
            <p class="ml-3 mb-0"><%=current_user.job%></p>
          <% end %>
        </div>
        <div class="pref pr-3 pl-4 mt-1 d-flex align-items-center">
          <% if current_user.movie_title.nil? %>
            <% else %>
            <i class="fas fa-video"></i>
            <p class="ml-3 mb-0"><%= current_user.movie_title %></p>
            <% end %>
        </div>
      </div>
      <% if current_user.tag_list.nil? %>
        <% else %>
        <div class="cards-activities ml-5 mr-5 mt-3">
          <%current_user.tag_list.each do |tag|%>
            <div class="clickable">
              <%if tag=="sport"  %>
                <i class="fas fa-football-ball"></i>
                <small>Sport</small>
                <% elsif tag=="cooking"%>
                <i class="fas fa-utensils"></i>
                <small>Cours de cuisine</small>
                <% elsif tag=="museum" %>
                <i class="fas fa-paint-brush"></i>
                <small>Exposition</small>
                <% elsif tag=="music" %>
                <i class="fas fa-music"></i>
                <small>Concert</small>
                <% elsif tag=="walk"%>
                <i class="fas fa-tree"></i>
                <small>Promenade</small>
                <% elsif tag=="cofee" %>
                <i class="fas fa-coffee"></i>
                <small>Café</small>
                <% elsif tag=="game"%>
                <i class="fas fa-chess-knight"></i>
                <small>Bar à jeux</small>
                <% elsif tag=="escapes" %>
                <i class="fas fa-search"></i>
                <small>Escape game</small>
              <%end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <%= link_to "Modifier", edit_profile_path, class:"btn btn-warning mb-3 pt-1 pb-1 w-50 rounded-pill btn-modifier" %>
  </div>
</div>


