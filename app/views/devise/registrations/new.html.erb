<div class="sign-up">
  <div class="card flex-column justify-content-center align-items-center">
  <div class = "logo mt-3"><%= cl_image_tag("llpfrsdiwc27yqhw6j0v", width: 110, height: 100, crop: :fill) %></div>
  <h1 class="text-center mt-3">Inscris-toi</h1>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">


      <div class="step mb-3">
        <div class="d-flex mt-1 flex-column justify-content-center align-items-center">
          <%= f.input :name,
                      required: true,
                      input_html: { autocomplete: "name" },
                      placeholder: "Ton prénom",
                      label:false %>
        </div>
        <div class="d-flex justify-content-around align-items-center">
          <%= f.input :age,
                      required:true,
                      label:false,
                      placeholder: "Ton âge"%>
          <label id="choix-photo" class="btn btn-outline-warning rounded-pill d-flex align-items-center justify-content-center">
            <%= f.input :photo, as: :file, wrapper_html: {class: "d-none"} %>
              Ta photo
          </label>
        </div>

        <h2>Ton profil MBTI</h2>
        <div class="d-flex justify-content-center">
          <%= render "mbti_selection" %>
        </div>
        <div class="link text-center mt-1">
          <a href="https://www.16personalities.com/fr/test-de-personnalite" target="_blank">Je ne connais pas mon profil MBTI</a>
        </div>
        <%= f.input :profile_mbti_id,
                    required: true,
                    wrapper_html: {class: "d-none"}%>


      </div>

      <div class="step d-none">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label: false,
                    placeholder: "Email" %>


        <%= f.input :password,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    label:false,
                    placeholder: "Mot de passe" %>

        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    label: false,
                    placeholder: "Confirmer mot de passe" %>

      <div class="d-flex justify-content-center mt-3">
        <%= f.button :submit, "Créer mon compte", class:"btn btn-warning pt-1 pb-1 w-75 rounded-pill" %>
      </div>
    </div>
    </div>
  <% end %>
    <div class="mt-3 p-2 bd-highlight">
      <div class="question-links">
        <a href="#" id="precedent" class="d-none">Précédent</a>
        <a href="#" id="suivant">Suivant</a>
      </div>

      <div class="progression">
        <span class="prog active" data-index="0"></span>
        <span class="prog" data-index="1"></span>
      </div>
    </div>
  </div>
</div>

