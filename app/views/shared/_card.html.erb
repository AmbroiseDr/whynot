<div class="card-matches">
    <h2 class = "emoji-m"> <%= match.smiley  %>ðŸ˜‡</h2>
    <div class ="profile-match">
      <h4 class="first-name-matches"> <%= match.name %> </h4>
      <h4 class="description-matches"> <%= match.description %></h4>
    </div>
      <% if @find_85_matches.include?(match) %>
        <% percentage = "85" %>
      <% elsif @find_70_matches.include?(match)%>
        <% percentage = "70" %>
      <% elsif @find_55_matches.include?(match) %>
        <% percentage = "55" %>
